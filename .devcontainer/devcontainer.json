{
    "name": "SanityCheck DevContainer",
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    // Or, if you prefer a specific Ubuntu version with fewer pre-installed tools for a leaner image:
    // "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    // "features": {
    //     "ghcr.io/devcontainers/features/aws-cli:1": {},
    //     "ghcr.io/devcontainers/features/docker-in-docker:2": {
    //         "version": "latest"
    //     },
    //     "ghcr.io/devcontainers/features/helm:1": {},
    //     "ghcr.io/devcontainers/features/kubectl-global:1": {},
    //     "ghcr.io/devcontainers/features/terraform:1": {},
    //     "ghcr.io/devcontainers/features/azure-cli:1": {} // Add if you need Azure CLI
    // },

    "features": {
        // AWS CLI for interacting with Amazon Web Services
        "ghcr.io/devcontainers/features/aws-cli:1": {
            "version": "latest"
        },
        // Docker-in-Docker for running Docker commands and containers inside the Codespace
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "version": "latest"
        },
        // Helm for managing Kubernetes applications
        "ghcr.io/devcontainers/features/helm:1": {
            "version": "latest"
        },
        // Kubectl for interacting with Kubernetes clusters
        "ghcr.io/devcontainers/features/kubectl-global:1": {
            "version": "latest"
        },
        // Terraform for infrastructure as code (IaC)
        "ghcr.io/devcontainers/features/terraform:1": {
            "version": "latest"
        },
        // Optional: Azure CLI for interacting with Azure services
        "ghcr.io/devcontainers/features/azure-cli:1": {
            "version": "latest"
        },
        // Optional: Google Cloud CLI for interacting with Google Cloud services
        "ghcr.io/devcontainers/features/gcloud-cli:1": {
            "version": "latest"
        },
        // Optional: GitHub CLI for interacting with GitHub
        "ghcr.io/devcontainers/features/github-cli:1": {
            "version": "latest"
        },
        // Optional: jq for JSON processing
        "ghcr.io/devcontainers/features/jq:1": {
            "version": "latest"
        },
        // Optional: yq for YAML processing
        "ghcr.io/devcontainers/features/yq:1": {
            "version": "latest"
        }
    },

    // Uncomment to connect as root instead. More common for container environments.
    // "remoteUser": "root",

    // Use 'postCreateCommand' to run commands after the container is created.
    // This is good for additional setup that features might not cover.
    // or for project-specific dependencies.
    "postCreateCommand": "echo 'DevContainer setup complete for sanitycheck project!' && aws --version && docker --version && helm version && kubectl version --client && terraform version"

    // Forwarding common ports for web applications or services you might run.
    // "forwardPorts": [3000, 8000, 8080]
}
